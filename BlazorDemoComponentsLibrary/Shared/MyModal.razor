<div id="@Id" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" @onclick="() => OnSalva.InvokeAsync()" class="btn btn-primary">Save changes</button>
                <button type="button" @onclick="() => OnAnnulla.InvokeAsync()" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Id { get; set; } = "myModal";
    [Parameter]
    public string Title { get; set; } = "Modal title";
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public EventCallback OnSalva { get; set;}
    [Parameter]
    public EventCallback OnAnnulla { get; set; }
}
